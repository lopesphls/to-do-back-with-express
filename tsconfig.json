{
  "compilerOptions": {    
    "target": "es2016",    
    "esModuleInterop": true, 
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist/",
    "forceConsistentCasingInFileNames": true, 
    "strict": true,        
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules",]  
}
